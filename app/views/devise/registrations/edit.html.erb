<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render 'shared/devisemes' %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true, readonly: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
    <%= f.input :password_confirmation, required: false %>
  </div>

  <%= f.input :subdomain, input_html: {:value => (current_user ? current_user.subdomain : '') + ".productpage.co", :readonly => true} %>

  <%= f.input :company_name, required: true, :input_html => { class: 'form-control' } %>
    <%= f.input :company_website, :input_html => { class: 'form-control' } %>
    <%= f.input :accent_color, required: true, :input_html => { class: 'form-control' } %>
    <%= f.input :title, required: true, :input_html => { class: 'form-control' } %>
    <%= f.input :subtitle, required: true, :input_html => { class: 'form-control' } %>

<div class="form-inputs">
  <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>
</div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
